<Controls:MetroWindow x:Class="PersonView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CETKinal2014277"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Person" Height="500" Width="600">
    <Grid>
        <!--Styles-->
        <Grid.Effect>
            <DropShadowEffect BlurRadius="10" Direction="265" Opacity="0.35" ShadowDepth="2"/>
        </Grid.Effect>
        <!--Row-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="29"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="64"/>
        </Grid.RowDefinitions>
        <!--Column-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Title-->
        <Label x:Name="label" Content="Person" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="150" FontFamily="Segoe Print" FontSize="20" Height="45" Grid.ColumnSpan="2"/>
        <!--Data Grid-->
        <!--**Marcar como ReadOnly-->
        <DataGrid x:Name="dataGrid" Margin="10" Grid.Row="3" MinColumnWidth="8" CanUserResizeColumns="False" Grid.ColumnSpan="4" ItemsSource="{ Binding ListPersons }" SelectedItem="{ Binding Element }" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn ElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                        EditingElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                        Header="IsSelected"
                                        Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected, Mode=OneWay}"
                                        />
                <DataGridTextColumn Binding="{Binding PersonID}" ClipboardContentBinding="{x:Null}" Header="PersonID" HeaderStringFormat="Columna"/>
                <DataGridTextColumn Binding="{Binding FirstName}" ClipboardContentBinding="{x:Null}" Header="FirstName" HeaderStringFormat="Columna"/>
                <DataGridTextColumn Binding="{Binding LastName}" ClipboardContentBinding="{x:Null}" Header="LastName"/>
                <DataGridTextColumn Binding="{Binding HireDate}" ClipboardContentBinding="{x:Null}" Header="HireDate"/>
                <DataGridTextColumn Binding="{Binding EnrollmentDate}" ClipboardContentBinding="{x:Null}" Header="EnrollmentDate"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--Text Box-->
        <TextBox Controls:TextBoxHelper.Watermark="LastName" Text="{Binding LastName}" x:Name="textBox" Margin="5" Grid.Row="1" TextWrapping="Wrap" Controls:TextBoxHelper.UseFloatingWatermark="True"/>
        <TextBox Controls:TextBoxHelper.Watermark="FirstName" Text="{Binding FirstName}" x:Name="textBox_Copy" Margin="5" Grid.Row="1" TextWrapping="Wrap" Grid.Column="1" Controls:TextBoxHelper.UseFloatingWatermark="True"/>
        <DatePicker Grid.Column="2" HorizontalAlignment="Left" Margin="5,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="136" Controls:TextBoxHelper.Watermark="Start Date" SelectedDate="{Binding HireDate}" Height="26"/>
        <DatePicker Grid.Column="3" HorizontalAlignment="Left" Margin="5,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="136" Controls:TextBoxHelper.Watermark="Start Date" SelectedDate="{Binding EnrollmentDate}" Height="26"/>
        <ComboBox Margin="5,5,5,5" Grid.Row="2" ItemsSource="{Binding ListOfTypes}" SelectedItem="{Binding Type}"/>
        <!--Buttons-->
        <StackPanel HorizontalAlignment="Right" Width="424" Margin="0,10,10,10" Grid.Row="4" Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Column="1">
            <Button IsEnabled="{Binding BtnSave}" Command="{Binding Model}" CommandParameter="Save" x:Name="button_Copy" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="29" Margin="5"/>
            <Button IsEnabled="{Binding BtnDelete}" Command="{Binding Model}" CommandParameter="Delete" x:Name="button_Copy1" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="29" Margin="5"/>
            <Button IsEnabled="{Binding BtnNew}" Command="{Binding Model}" CommandParameter="New" x:Name="button" Content="New" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="29" Margin="5"/>
            <Button IsEnabled="{Binding BtnCancel}" Command="{Binding Model}" CommandParameter="Cancel" x:Name="button_Copy3" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="29" Margin="5"/>
            <Button IsEnabled="{Binding BtnUpdate}" Command="{Binding Model}" CommandParameter="Update" x:Name="button_Copy2" Content="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="29" Margin="5"/>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
